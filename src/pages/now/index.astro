---
import { Header } from '@components/misc';
import { BaseHead } from '@components/seo';
import { SITE_DESCRIPTION, SITE_TITLE } from '@data/index';
import { getCollection } from 'astro:content';
import RootLayout from '@layouts/root-layout.astro';

// Obtiene la colecciÃ³n "now"
const nowItems = (await getCollection('now')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang='en'>
	<head>
		<BaseHead
			title={`Now - ${SITE_TITLE}`}
			description={SITE_DESCRIPTION}
			image='/images/ogimage.png'
		/>
	</head>
	<RootLayout>
		<div class='flex flex-col w-full gap-6 max-w-xl'>
			<Header />
			<h1 class='w-full text-7xl font-medium tracking-tight'>/now</h1>

			{nowItems.length === 0 ? (
				<p>No hay actualizaciones por ahora.</p>
			) : (
				nowItems.map((item) => (
					<a href={`/now/${item.slug}`} class='block p-4 border-b'>
						<h2 class='text-xl font-semibold'>{item.data.title}</h2>
						<p class='text-gray-500'>{item.data.description}</p>
					</a>
				))
			)}
		</div>
	</RootLayout>
</html>
