---
interface Props {
	date: string;
}

const { date: dateString } = Astro.props;
const date = new Date(dateString);
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('es-CA', {
			year: 'numeric',
			month: '2-digit',
			day: '2-digit',
		
		}).split('/').reverse().join('.')
	}
</time>
